/* user/grabs/index.wxss */
.container {
  padding: 0 0 30rpx 0;
  background-color: #f8f8f8;
}

.header {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.loading-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #f8f8f8;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-tip icon {
  margin-bottom: 20rpx;
}

.grab-list {
  padding: 0 20rpx;
}

.grab-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.grab-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.grab-id {
  font-size: 26rpx;
  color: #999;
}

.grab-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-grabbed {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-cancelled {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.grab-content {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.room-info {
  margin-bottom: 20rpx;
}

.room-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.room-type {
  font-size: 26rpx;
  color: #666;
}

.activity-info {
  padding: 16rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.activity-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.activity-time {
  font-size: 24rpx;
  color: #999;
}

.grab-footer {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.grab-time {
  display: flex;
  flex-direction: column;
}

.grab-time text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.grab-actions {
  display: flex;
}

.action-btn {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.confirm-btn {
  background-color: #1989fa;
  color: #fff;
}

.cancel-btn {
  background-color: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  color: #999;
  font-size: 24rpx;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}
