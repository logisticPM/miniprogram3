/* activity/detail/index.wxss */
.container {
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #1989fa;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.activity-header {
  position: relative;
}

.activity-cover {
  width: 100%;
  height: 400rpx;
}

.activity-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  color: #fff;
}

.activity-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.activity-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}

.status-not-started {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-in-progress {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-ended {
  background-color: #f5f5f5;
  color: #999;
}

.activity-time {
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.activity-address {
  font-size: 26rpx;
}

.building-name {
  font-weight: bold;
  margin-right: 10rpx;
}

.activity-description {
  padding: 30rpx;
  background-color: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: #1989fa;
  border-radius: 4rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-top: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  position: relative;
}

.tab-item.active {
  color: #1989fa;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #1989fa;
  border-radius: 2rpx;
}

.tab-content {
  background-color: #fff;
  padding: 30rpx;
}

.room-type-list {
  margin-bottom: 20rpx;
}

.room-type-item {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.room-type-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.room-type-info {
  flex: 1;
}

.room-type-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.room-type-area {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.room-type-price {
  font-size: 32rpx;
  color: #f5222d;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.room-type-features {
  display: flex;
  flex-wrap: wrap;
}

.feature-tag {
  font-size: 22rpx;
  color: #1989fa;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.room-list {
  margin-bottom: 20rpx;
}

.room-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.room-info {
  flex: 1;
}

.room-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.room-detail {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.room-detail text {
  margin-right: 20rpx;
}

.room-price {
  font-size: 32rpx;
  color: #f5222d;
  font-weight: bold;
}

.grab-btn {
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1989fa;
  border-radius: 35rpx;
  margin: 0;
}

.empty-tip {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
}

.error-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.error-tip icon {
  margin-bottom: 20rpx;
}
